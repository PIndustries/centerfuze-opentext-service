# CenterFuze OpenText Service Configuration

# Service Configuration
SERVICE_NAME=centerfuze-opentext-service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# NATS Configuration
NATS_SERVERS=nats://localhost:4222
NATS_USER=
NATS_PASSWORD=
NATS_TOKEN=
NATS_RECONNECT_TIME_WAIT=2
NATS_MAX_RECONNECT_ATTEMPTS=60
NATS_PING_INTERVAL=120
NATS_MAX_OUTSTANDING_PINGS=2

# OpenText API Configuration
OPENTEXT_API_BASE_URL=https://api.opentext.com/v1
OPENTEXT_API_KEY=your_api_key_here
OPENTEXT_API_SECRET=your_api_secret_here
OPENTEXT_API_TIMEOUT=30
OPENTEXT_MAX_RETRIES=3
OPENTEXT_RETRY_DELAY=1

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_SECOND=10.0
RATE_LIMIT_BURST_CAPACITY=20
RATE_LIMIT_ADAPTIVE=true
RATE_LIMIT_MIN_RPS=1.0
RATE_LIMIT_MAX_RPS=100.0

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_CLEANUP_INTERVAL=300
CACHE_MAX_SIZE=

# Service Performance Configuration
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=10
WORKER_THREADS=4